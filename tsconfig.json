{
    "compilerOptions": {
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowJs": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}